<div class="embed-responsive embed-responsive-16by9">
  <iframe class="embed-responsive-item"
    src=<%= "embed?mode=#{@mode}" %>>
  </iframe>
  <div class="btn-group-vertical btn-group-results">
    <%= link_to "<span class='glyphicon glyphicon-chevron-right'>" \
      "</span>".html_safe,
      results_job_path(@job, mode: @job.next_mode(params[:mode].to_i)),
      class: "btn btn-transparent",
      data: { toggle: 'tooltip', placement: 'top' },
      title: 'Next mode' %>
    <%= link_to "<span class='glyphicon glyphicon-chevron-left'>" \
      "</span>".html_safe,
      results_job_path(@job, mode: @job.previous_mode(params[:mode].to_i)),
      class: "btn btn-transparent",
      data: { toggle: 'tooltip', placement: 'top' },
      title: 'Previous mode' %>
    <%= link_to "<span class='glyphicon glyphicon-fullscreen'>" \
      "</span>".html_safe,
      embed_job_path(@job, mode: params[:mode]),
      class: "btn btn-transparent",
      data: { toggle: 'tooltip', placement: 'top' },
      title: 'Open in new tab',
      target: "_blank" %>
  </div>
</div>
